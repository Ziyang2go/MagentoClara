<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

  <referenceBlock name="product.info.options.wrapper">
    <block class="Magento\Bundle\Block\Catalog\Product\View\Type\Bundle" name="product.info.clara.configurator" as="clara_configurator" after="-" template="Magento_Bundle::catalog/product/view/type/bundle/ClaraConfigurator.phtml"/>
  </referenceBlock>
  <referenceBlock name="content">
    <container name="bundle.product.claraConfigurator.wrapper" htmlTag="div" htmlClass="bundle-options-wrapper"/>
  </referenceBlock>
  <move element="product.info.options.wrapper" destination="bundle.product.claraConfigurator.wrapper" before="-" />
  <!--container name="product.info.form.content" as="product_info_form_content">
    <block class="Magento\Bundle\Block\Catalog\Product\View\Type\Bundle" name="product.info.clara.configurator" as="clara_configurator" before="addtocart" template="Magento_Bundle::catalog/product/view/type/bundle/ClaraConfigurator.phtml"/>
  </container-->
  <container name="bundle.options.container" remove="true"/>
  <referenceContainer name="content">
    <container name="product.info.media" htmlTag="div" htmlClass="product media" after="product.info.main">
        <remove name="product.info.media.image"/>
        <block class="Magento\Framework\View\Element\Template" name="product.info.media.image" template="Exocortex_ClaraPlayer::ClaraPlayer.phtml"/>
    </container>
  </referenceContainer>
</page>
